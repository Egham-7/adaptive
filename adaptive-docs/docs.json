{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Adaptive",
  "description": "Adaptive is an AI-powered platform offering cost-optimized and intelligent routing for LLMs.",
  "root": "index",
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "description": "How to use Adaptive effectively",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "authentication"]
          },
          {
            "group": "Integration Guides",
            "pages": [
              "integrations/openai-sdk",
              "integrations/vercel-ai-sdk",
              "integrations/langchain"
            ]
          },
          {
            "group": "Key Features",
            "pages": [
              "features/intelligent-routing",
              "features/cost-optimization",
              "features/provider-constraints"
            ]
          }
        ]
      },
      {
        "dropdown": "API Reference",
        "icon": "terminal",
        "description": "Explore the Adaptive API",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/chat-completions",
              "api-reference/models",
              "api-reference/errors"
            ]
          },
          {
            "group": "OpenAPI",
            "openapi": {
              "source": "api-reference/openapi.json"
            }
          }
        ]
      },
      {
        "dropdown": "Examples & Use Cases",
        "icon": "lightbulb",
        "description": "Real-world applications and starter templates",
        "pages": ["examples/basic-chat", "examples/streaming-chat"]
      },
      {
        "dropdown": "Support",
        "icon": "life-ring",
        "description": "Help and troubleshooting resources",
        "pages": ["troubleshooting"]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://adaptive.app"
  },
  "navbar": {
    "links": [
      {
        "label": "Pricing",
        "href": "https://adaptive.app/pricing"
      },
      {
        "label": "Support",
        "href": "mailto:support@adaptive.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://adaptive.app/signup"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/adaptive",
      "github": "https://github.com/adaptive",
      "linkedin": "https://linkedin.com/company/adaptive"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          {
            "label": "Dashboard",
            "href": "https://adaptive.app"
          },
          {
            "label": "Documentation",
            "href": "https://docs.adaptive.app"
          }
        ]
      },
      {
        "header": "Company",
        "items": [
          {
            "label": "Careers",
            "href": "https://adaptive.app/careers"
          },
          {
            "label": "Blog",
            "href": "https://adaptive.app/blog"
          }
        ]
      }
    ]
  },
  "api": {
    "baseUrl": "https://llmadaptive.uk/api/v1",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"]
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt"]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  }
}

