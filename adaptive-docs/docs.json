{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Adaptive",
  "description": "Adaptive is an AI-powered platform offering cost-optimized and intelligent routing for LLMs.",
  "root": "index",
  "colors": {
    "primary": "#d4af37",
    "light": "#f0e68c",
    "dark": "#b8860b"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "description": "How to use Adaptive effectively",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "authentication"]
          },
          {
            "group": "Integration Guides",
            "pages": [
              "integrations/openai-sdk",
              "integrations/vercel-ai-sdk",
              "integrations/langchain"
            ]
          },
          {
            "group": "Key Features",
            "pages": [
              "features/intelligent-routing",
              "features/prompt-response-cache",
              "features/semantic-cache",
              "features/provider-resiliency",
              "features/performance"
            ]
          }
        ]
      },
      {
        "dropdown": "API Reference",
        "icon": "terminal",
        "description": "Explore the Adaptive API",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Core Endpoints",
            "icon": "terminal",
            "pages": ["api-reference/chat-completions", "api-reference/select-model"]
          },
          {
            "group": "OpenAPI",
            "openapi": {
              "source": "api-reference/openapi.json"
            }
          }
        ]
      },
      {
        "dropdown": "Examples & Use Cases",
        "icon": "lightbulb",
        "description": "Real-world applications and starter templates",
        "pages": ["examples/basic-chat", "examples/streaming-chat"]
      },
      {
        "dropdown": "Support",
        "icon": "life-ring",
        "description": "Help and troubleshooting resources",
        "pages": ["troubleshooting", "terms-of-service", "privacy-policy"]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo-dark.png",
    "href": "https://llmadaptive.uk"
  },
  "navbar": {
    "links": [
      {
        "label": "Pricing",
        "href": "https://llmadaptive.uk/pricing"
      },
      {
        "label": "Support",
        "href": "https://llmadaptive.uk/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://llmadaptive.uk/signup"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/adaptive",
      "github": "https://github.com/adaptive",
      "linkedin": "https://linkedin.com/company/adaptive"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          {
            "label": "Dashboard",
            "href": "https://llmadaptive.uk"
          },
          {
            "label": "Documentation",
            "href": "https://docs.llmadaptive.uk"
          }
        ]
      },
      {
        "header": "Company",
        "items": [
          {
            "label": "Careers",
            "href": "https://llmadaptive.uk/careers"
          },
          {
            "label": "Blog",
            "href": "https://llmadaptive.uk/blog"
          }
        ]
      },
      {
        "header": "Legal",
        "items": [
          {
            "label": "Terms of Service",
            "href": "https://docs.llmadaptive.uk/terms-of-service"
          },
          {
            "label": "Privacy Policy",
            "href": "https://docs.llmadaptive.uk/privacy-policy"
          }
        ]
      }
    ]
  },
  "api": {
    "baseUrl": "https://llmadaptive.uk/api/v1",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"]
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt"]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  }
}
