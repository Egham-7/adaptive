// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

model Conversation {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  userId    String

  messages Message[]
  pinned   Boolean   @default(false)

  @@index([deletedAt])
}

model Message {
  id      String @id @default(cuid()) // AI SDK uses string IDs
  role    String // 'system' | 'user' | 'assistant' | 'data'
  content String // Removed @db.NVarChar(Max) as it's not needed for Postgres

  // AI SDK Message fields converted to native JSON type
  reasoning               Json?
  annotations             Json?
  parts                   Json?
  experimentalAttachments Json?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relationship back to Conversation
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId Int

  // Indexes for performance
  @@index([deletedAt])
  @@index([conversationId])
  @@index([role])
}
